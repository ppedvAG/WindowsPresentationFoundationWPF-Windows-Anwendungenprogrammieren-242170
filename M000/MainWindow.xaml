<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
		SizeToContent="Height"
		ResizeMode="NoResize"
		FontSize="14">
	<Window.Background>
		<LinearGradientBrush>
			<GradientStop Color="Yellow" Offset="0"/>
			<GradientStop Color="Violet" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
    <StackPanel Margin="5">
		<UniformGrid Columns="2">
			<TextBlock Text="Vorname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Nachname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Geburtsdatum: "/>
			<DatePicker/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Lieblingsfarbe: "/>
			<ComboBox>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Grün" Foreground="Green"/>
				<ComboBoxItem Content="Blau" Foreground="Blue"/>
				<ComboBoxItem Content="Geld" Foreground="Yellow"/>
			</ComboBox>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Verheiratet: "/>
			<CheckBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Geschlecht: "/>
			<StackPanel>
				<RadioButton GroupName="Gender" Content="M"/>
				<RadioButton GroupName="Gender" Content="W"/>
				<RadioButton GroupName="Gender" Content="D"/>
			</StackPanel>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="100, 5, 0, 0">
			<Button Content="Abbrechen" Margin="0, 0, 2.5, 0"/>
			<Button Content="OK" Margin="2.5, 0, 0, 0"/>
		</UniformGrid>
    </StackPanel>
</Window>
