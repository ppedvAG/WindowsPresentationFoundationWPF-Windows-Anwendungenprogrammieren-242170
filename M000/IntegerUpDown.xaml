<UserControl x:Class="M000.IntegerUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M000"
			 Name="Self">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="30"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		
		<TextBox Grid.RowSpan="2" Text="{Binding ElementName=Self, Path=Value}" VerticalContentAlignment="Center"/>
		<Button Content="&#11205;" Grid.Column="1" Click="Button_Click" FontSize="8"/>
		<Button Content="&#11206;" Grid.Column="1" Grid.Row="1" Click="Button_Click_1" FontSize="8"/>
	</Grid>
</UserControl>
